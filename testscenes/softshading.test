size 640 480

camera 0 0 1 0 0 -1 0 1 0 45
maxdepth 5
antialias 4

ambient 0 0 0
specular 0 0 0
shininess 1
emission 0 0 0
diffuse 0 0 0

attenuation 1 0.1 0.05
antialias 1
shadowrays 1
lightradius 0

point 0 0.44 -1.5 0.8 0.8 0.8
# directional 0 1 -1 0.2 0.2 0.2
# point -0.1 -0.05 0 1 1 0

vertex -1 1 0
vertex -1 -1 0
vertex +1 -1 0
vertex +1 +1 0

# light
pushTransform
	translate 0 0 -3
	rotate 0 1 0 -50
	scale 2 1 1
	emission 1 1 1
	tri 2 1 0
	tri 3 2 0
popTransform
emission 0 0 0

# left wall
pushTransform
	translate 0 0 -3
	rotate 0 1 0 50
	scale 10 10 1
	diffuse 0 1 1
	tri 0 1 2
	tri 0 2 3
popTransform

# back wall
pushTransform
	scale 10 10 1
	translate 0 0 -2
	diffuse 0 1 1
	tri 0 1 2
	tri 0 2 3
popTransform

# floor
pushTransform
	translate 0 -0.5 0
	rotate 1 0 0 -60
	translate 0 0 -1
	scale 10 10 1
	diffuse 1 1 1
	tri 0 1 2
	tri 0 2 3
popTransform

pushTransform
	ambient 0 0 1
	diffuse 0.7 0.5 0.2
	specular 0.3 0.3 0.3
	translate -0.6 -0.5 -1.7
	scale 0.2 0.2 0.2
	sphere 0 0 0 1
popTransform
